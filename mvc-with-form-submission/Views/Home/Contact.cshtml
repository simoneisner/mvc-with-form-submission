@model mvcwithformsubmission.Models.CustomerModel

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>


<div id="left-block" class="col-sm-6">
    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

    <address>
        <strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br />
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>

</div>

<div id="right-block" class="col-sm-6">

    <form method="POST" asp-controller="Home" asp-action="Contact">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" placeholder="Your name goes here" />
        <br />
        <select asp-for="CountryCode" asp-items="Model.CountryList" />
        <input type="submit" />
    </form>
</div>
